<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application themePreset -->
    <style name="Theme.WebDefender" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_1ef0f4</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/color_1ef0f4</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/color_05333e</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Customize font -->
<!--        <item name="android:fontFamily">@font/nunito_regular</item>-->

        <!-- Customize button -->
        <item name="android:buttonStyle">@style/Theme.WebDefender.Button</item>

        <!-- Customize switch -->
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/color_272c38</item>

        <!-- Customize edittext -->
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <!-- Customize SearchView-->
        <item name="searchViewStyle">@style/Theme.WebDefender.SearchView</item>

        <!-- Customize PopupMenu -->
        <item name="popupMenuStyle">@style/Theme.WebDefender.PopupMenuStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Theme.WebDefender.PopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Theme.WebDefender.PopupMenuTextAppearanceLarge</item>

    </style>

    <style name="Theme.WebDefender.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_button</item>
        <!--        <item name="android:fontFamily">@font/nunito_medium</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.WebDefender.DialogButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_dialog_button</item>
        <!--        <item name="android:fontFamily">@font/nunito_medium</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.WebDefender.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <!--        <item name="layout">@layout/abc_search_view</item>-->
        <!--        <item name="background">@color/transparent</item>-->
        <!--        <item name="queryBackground">@color/transparent</item>-->
        <!--        <item name="submitBackground">@drawable/abc_textfield_search_material</item>-->
        <!--        <item name="closeIcon">@drawable/abc_ic_clear_material</item>-->
        <!--        <item name="searchIcon">@drawable/abc_ic_search_api_material</item>-->
        <!--        <item name="searchHintIcon">@drawable/abc_ic_search_api_material</item>-->
        <!--        <item name="goIcon">@drawable/abc_ic_go_search_api_material</item>-->
        <!--        <item name="voiceIcon">@drawable/abc_ic_voice_search_api_material</item>-->
        <!--        <item name="commitIcon">@drawable/abc_ic_commit_search_api_mtrl_alpha</item>-->
        <!--        <item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>-->
    </style>

    <style name="Theme.WebDefender.PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <style name="Theme.WebDefender.PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.WebDefender.PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
