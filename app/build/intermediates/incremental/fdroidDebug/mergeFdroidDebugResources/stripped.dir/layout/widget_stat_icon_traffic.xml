<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_stat_icon_traffic0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:src="@drawable/ic_traffic0"
        app:tint="@color/widget_stat_off_text_color" />

    <ImageView
        android:id="@+id/widget_stat_icon_traffic1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:src="@drawable/ic_traffic1"
        android:visibility="invisible"
        app:tint="@color/widget_stat_off_text_color" />

    <ImageView
        android:id="@+id/widget_stat_icon_traffic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:src="@drawable/ic_traffic2"
        android:visibility="invisible"
        app:tint="@color/widget_stat_off_text_color" />

</RelativeLayout>


